module alu_shifter (
    output error,
    input a[8],
    input b[3],
    input alu_fn[4],
    output shifted[8]
  ) {

  always {
    error = 0;
    shifted = 8b0;
    if(alu_fn == 0) shifted = a << b; 
    else if(alu_fn == b01) shifted = a >> b;
    else if(alu_fn == b11) shifted = $signed(a) >>> b; //trying to use shift right arithmetric
    else error = 1;
  }
}
